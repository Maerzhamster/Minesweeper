<Window x:Class="Minesweeper.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="Minesweeper Setting" Height="300" Width="300"
        Margin="10px" WindowStartupLocation="CenterScreen" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label Content="Minesweeper" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" FontFamily="Sylfaen" FontSize="30" HorizontalAlignment="Center" ></Label>
        <Label x:Name="LabelHeight" Grid.Row="1" Grid.Column="0" Margin="10px">Height:</Label>
        <ComboBox x:Name="ComboBoxHeight" Grid.Row="1" Grid.Column="1" Text="10" Margin="10px" IsEditable="True" DropDownClosed="TextBoxHeight_DropDownClosed"></ComboBox>
        <Label x:Name="LabelWidth" Grid.Row="2" Grid.Column="0" Margin="10px">Width:</Label>
        <ComboBox x:Name="ComboBoxWidth" Grid.Row="2" Grid.Column="1" Text="10" Margin="10px" IsEditable="True" DropDownClosed="TextBoxWidth_DropDownClosed"></ComboBox>
        <Label x:Name="LabelMineNumber" Grid.Row="3" Grid.Column="0" Margin="10px">Number of Mines:</Label>
        <ComboBox x:Name="ComboBoxMineNumber" Grid.Row="3" Grid.Column="1" Text="10" Margin="10px" IsEditable="True"></ComboBox>
        <Button x:Name="ButtonSetting" Grid.Row="4" Grid.Column="1" Content="Start Game" Click="ButtonSetting_Click" Margin="10px"></Button>
    </Grid>
</Window>
